@model GigimuDTO.JadwalDTO

@{
    ViewData["Title"] = "editJadwal";
}

<div class="row">
    <div class="col-lg-12">
        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Edit Jadwal</h6>
            </div>
            <div class="card-body">
                <form asp-action="editJadwal">
                    <div class="form-group">
                        <label for="JadwalDokterID">Jadwal ID :</label>
                        <input type="text" class="form-control" name="JadwalDokterID" readonly value="@Model.JadwalDokterID" />
                    </div>
                    <div class="form-group">
                        <label for="Tanggal">Tanggal :</label>
                        <input type="text" class="form-control" name="Tanggal" readonly value="@Model.Tanggal.ToString("dd-MM-yyyy")" />
                    </div>
                    <div class="form-group">
                        <label for="MaxOrang">max orang:</label>
                        <input type="text" class="form-control" name="MaxOrang" value="@Model.MaxOrang" />
                    </div>
                    <div class="form-group">
                        <input type="Submit" class="btn btn-success btn-sm" value="Edit" />
                    </div>
                </form>
            </div>
        </div>

    </div>

</div>