@model IEnumerable<GigimuDTO.KonsultasiDTO>

@{
    ViewData["Title"] = "addKonsultasi";
}

<div class="row">
    <div class="col-lg-12">
        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Konsultasi List Page</h6>
            </div>
            <div class="card-body">
                <a class="btn btn-success btn-sm" href="#" data-toggle="modal" data-target="#addKonsultasiModal">
                    Tambah Konsultasi
                </a><br /><br />
                <table class="table table-striped">
                    <tr>
                        <th>KonsultasiID</th>
                        <th>Dokter Name</th>
                        <th>Pasien Name</th>
                        <th>Tanggal</th>
                        <th>Keluhan</th>
                        <th>Diagnosa</th>
                        <th>obat</th>
                        <th>TotalPay</th>
                    </tr>
                    @foreach (var konsul in Model)
                    {
                        <tr>
                            <td>@konsul.KonsultasiID</td>
                            <td>@konsul.Dokter.Nama</td>
                            <td>@konsul.Pasien.Nama</td>
                            <td>@konsul.Tanggal.ToString("dd-MM-yyyy")</td>
                            <td>@konsul.Keluhan</td>
                            <td>@konsul.Diagnosa</td>
                            <td>@konsul.ResepObat</td>
                            <td>@konsul.TotalPay.ToString("C")</td>
                        </tr>
                    }
                </table>

            </div>
        </div>

    </div>

</div>
<div class="modal fade" id="addKonsultasiModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Konsultasi</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" action="/Dokters/addKonsultasi">
                    <div class="form-group">
                        <label for="dokterID">Pilih Dokter</label>
                        <select name="dokterID" id="dokterID" class="form-control">
                            @foreach (var data in ViewBag.dokter)
                            {
                                <option value="@data.DokterID">@data.Nama</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="pasienID">Pilih Pasien</label>
                        <select name="pasienID" id="pasienID" class="form-control">
                            @foreach (var data in ViewBag.pasien)
                            {
                                <option value="@data.PasienID">@data.Nama</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="Tanggal">Tanggal :</label>
                        <input type="date" id="Tanggal" class="form-control" name="Tanggal" />
                    </div>
                    <div class="form-group">
                        <label for="Keluhan">Keluhan :</label>
                        <input type="text" id="Keluhan" class="form-control" name="Keluhan" placeholder="Keluhan" />
                    </div>
                    <div class="form-group">
                        <label for="Diagnosa">Diagnosa :</label>
                        <input type="text" id="Diagnosa" class="form-control" name="Diagnosa" placeholder="Diagnosa" />
                    </div>
                    <div class="form-group">
                        <label for="ResepObat">Resep Obat:</label>
                        <input type="text" id="ResepObat" class="form-control" name="ResepObat" placeholder="Diagnosa" />
                    </div>
                    <div class="form-group">
                        <label for="TotalPay">Total Pay :</label>
                        <input type="text" id="TotalPay" class="form-control" name="TotalPay" placeholder="Total Pay" />
                    </div>
                    <input type="Submit" value="Add" class="btn btn-success btn-sm" />
                </form>
            </div>
        </div>
    </div>
</div>
